.button-group {
    display: flex;
    align-items: center;
    justify-content: space-between;
    /* 外间距margin */
    margin: 10rpx;
    /* 内间距padding */
    padding: 10rpx;
    border-radius: 20rpx;
    border: 1px solid black;
}

/* 返回按钮 */
.go-back-button {
    width: 40% !important;
    background-color: gray;
}

.label{
    margin-left: 10rpx;
    font-size: 40rpx;
    font-weight: bold;
}

.form-item{
    border-radius: 20rpx;
    border: 1px solid black;
    /* 外间距margin */
    margin: 10rpx;
    /* 内间距padding */
    padding: 10rpx;
}

.input-field{
    width: 100%;
    height: 80rpx;
    box-sizing: border-box;
    border: 1px solid #ccc;
    border-radius: 20rpx;
    color: rgb(10, 132, 255);
}

.picker-display{
    font-size: 35rpx;
    color: rgb(10, 132, 255);

    box-sizing: border-box;
    border: 1px solid #ccc;
    border-radius: 20rpx;
}
.button-group {
    display: flex;
    align-items: center;
    justify-content: space-between;
    /* 外间距margin */
    margin: 10rpx;
    /* 内间距padding */
    padding: 10rpx;

    border-radius: 20rpx;
    border: 1px solid black;
}

/* 返回按钮 */
.go-back-button {
    background-color: gray;
    width: 40% !important;
    margin-right: 40rpx;
}

.contact-edit {
    /* 外间距margin */
    margin: 10rpx;
    /* 内间距padding */
    padding: 10rpx;

    border: 1px solid black;
    border-radius: 20rpx;
}

.form-item {
    margin-bottom: 15px;
}

.input-field {
    width: 100%;
    height: 80rpx;
    box-sizing: border-box;
    border: 1px solid #ccc;
    border-radius: 20rpx;
}

.label{
    font-size: 40rpx; 
}
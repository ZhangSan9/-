.button-group {
    /* 外间距margin */
    margin: 10rpx;
    /* 内间距padding */
    padding:10rpx;

    border-radius: 20rpx;
    border: 1px solid black;
    justify-content: space-between;
    display: flex;
    align-items: center;
}

/* 返回按钮 */
.go-back-button {
    width: 170rpx !important;
    background-color: gray;
}

/* 添加联系人按钮 */
.submit-button {
    border-radius: 20rpx;
}


.form-container {
    border-radius: 20rpx;
    border: 1px solid black;
    
    /* 外间距margin */
    margin: 10rpx;
    /* 内间距padding */
    padding:10rpx;
}

.form-item {
    margin: 10rpx;
    padding: 10rpx;
    font-size: 35rpx;
}

.input-field {
    width: 100%;
    height: 80rpx;
    box-sizing: border-box;
    border: 1px solid #ccc;
    border-radius: 20rpx;
}

